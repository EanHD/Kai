# Environment Configuration Template
# Copy this file to .env and fill in your values

# OpenRouter API Key (for external model routing)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Database Paths
SQLITE_DB_PATH=~/.kai_assistant/conversations.db
VECTOR_DB_PATH=~/.kai_assistant/vectors

# Model Configuration
LOCAL_MODEL=granite4:tiny-h
OLLAMA_BASE_URL=http://localhost:11434

# Cost Controls
DEFAULT_COST_LIMIT=1.0
SOFT_CAP_THRESHOLD=0.8

# Security
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=generate_secure_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=~/.kai_assistant/kai.log
