# Environment Configuration Template
# Copy this file to .env and fill in your values

# OpenRouter API Key (for external model routing)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Web Search APIs (optional but recommended for better results)
BRAVE_API_KEY=your_brave_api_key_here  # Free tier available at https://brave.com/search/api/
TAVILY_API_KEY=your_tavily_api_key_here  # Perplexity-style AI search at https://tavily.com ($10/month)

# Database Paths
SQLITE_DB_PATH=~/.kai_assistant/conversations.db
VECTOR_DB_PATH=~/.kai_assistant/vectors

# Model Configuration
LOCAL_MODEL=granite4:micro-h # This is a solid 3b model tested with 1650 Super GPU 4gb VRAM, very fast and capable
OLLAMA_BASE_URL=http://localhost:11434

# Cost Controls
DEFAULT_COST_LIMIT=1.0
SOFT_CAP_THRESHOLD=0.8

# Security
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=generate_secure_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=~/.kai_assistant/kai.log
