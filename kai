#!/usr/bin/env python3
"""Kai CLI entry point - run with 'kai' or './kai' from project directory."""
import sys
import os

# Add project to path
project_root = os.path.dirname(os.path.abspath(__file__))
sys.path.insert(0, project_root)

# Run the CLI module directly (includes argparse logic)
if __name__ == "__main__":
    import runpy
    runpy.run_module("src.cli.main", run_name="__main__")
